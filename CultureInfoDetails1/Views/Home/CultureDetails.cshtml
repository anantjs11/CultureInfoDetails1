@model IEnumerable<CultureInfoDetails1.Models.CultureSpecification>

@{
    ViewData["Title"] = "View";
}

<h1>Culture Info</h1>

<style>
    .table td, .table th {
        padding: .75rem;
        vertical-align: top;
        border: 1px solid #dee2e6;
        text-align: center;
    }

    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
        text-align: center;
    }
</style>
<form method="post" asp-controller="Home" asp-action="CultureDetails">
    <div style="float:right;">
        <span>Search By Code:</span><input type="text" style="margin:10px;" name="searchCode" value="@ViewBag.searchCode" />
        <input type="submit" value="Search" />
        @*<input type="button" value="Clear" asp-action="CultureDetails" asp-controller="Home" />*@
        @*@Html.ActionLink("Clear", "CultureDetails")*@
        <a asp-action="CultureDetails" style="padding:4px 6px 4px 6px;border:1px solid grey;background-color:lightgrey;color:black;">
            Clear
        </a>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CultureCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupSeparator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupSeparatorUnicode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DecimalSeparator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DecimalSeparatorUnicode)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CultureCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupSeparator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupSeparatorUnicode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DecimalSeparator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DecimalSeparatorUnicode)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</form>
